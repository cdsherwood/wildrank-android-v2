<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cycle"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayoutCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_hatch_l3"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:label="L 3 Hatch" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_hatch_l2"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:label="L 2 Hatch" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_hatch_l1"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:label="L 1 Hatch" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/gamepiece_1_dropped"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:label="Hatch Dropped" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayoutCenter"
        android:orientation="vertical">

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/not_scored"
            android:layout_width="370dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            app:label="Not Scored" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLayoutCenter"
            android:orientation="horizontal">

            <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
                android:id="@+id/cs_hatch"
                android:layout_width="175dp"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                app:label="CS Hatch" />

            <Space
                android:layout_height="20dp"
                android:layout_width="20dp"/>

            <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
                android:id="@+id/cs_cargo"
                android:layout_width="175dp"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                app:label="CS Cargo" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayoutCenter"
        android:orientation="vertical">

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_cargo_l3"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:label="L 3 Cargo" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_cargo_l2"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:label="L 2 Cargo" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/ro_cargo_l1"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:label="L 1 Cargo" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/gamepiece_2_dropped"
            android:layout_width="300dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:label="Cargo Dropped" />

    </LinearLayout>

    <Button
        android:id="@+id/finish_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayoutCenter"
        android:text="@string/button_finish_cycle" />

    <org.wildstang.wildrank.androidv2.views.LinearGradientImageView
        android:layout_width="226dp"
        android:layout_height="353dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="265dp"
        android:layout_marginRight="265dp"
        android:background="@drawable/rocketship"
        app:srcCompat="@drawable/rocketship" />

    <org.wildstang.wildrank.androidv2.views.LinearGradientImageView
        android:layout_width="296dp"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="928dp"
        android:layout_marginRight="928dp"
        android:background="@drawable/cargoship"
        app:srcCompat="@drawable/cargoship" />

    <org.wildstang.wildrank.androidv2.views.LinearGradientImageView
        android:layout_width="180dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="928dp"
        android:layout_marginRight="916dp"
        android:background="@drawable/cargo"
        app:srcCompat="@drawable/cargo" />

    <org.wildstang.wildrank.androidv2.views.LinearGradientImageView
        android:layout_width="144dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="1082dp"
        android:layout_marginRight="1082dp"
        android:background="@drawable/hatchpanel"
        app:srcCompat="@drawable/hatchpanel" />

</RelativeLayout>