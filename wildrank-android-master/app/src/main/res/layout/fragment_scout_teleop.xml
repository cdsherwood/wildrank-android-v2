<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            app:key="endgame_climb_issues"
            app:label="Issues w/ L2 or L3 Climb" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingSpinnerView
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            app:key="endgame_climb_level"
            app:label="Climb Level"
            app:values="@array/climb_level"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            app:key="defensive_moves"
            app:label="Defensive Moves" />

    </LinearLayout>

    <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCyclesView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/other"
        app:key="cycles" />

</RelativeLayout>